{% extends 'base.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block body %}
    <h3>{{ catalog.description }}</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ catalog.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ catalog.name }}</td>
            </tr>
        </tbody>
    </table>
    <table>
        <thead>
            thead
        </thead>
        <tbody>
            {% for chap in catalog.myChapters %}
                <tr>
                    <td>
                        {% if kosztorys_id is defined %}
                            <a href="{{ path('chapter_show_przez_kosztorys', {'id': chap.id, 'kosztorys_id': kosztorys_id}) }}">
                        {% else %}
                            <a href="{{ path('chapter_show', {'id': chap.id}) }}">
                        {% endif %}
                            {{ chap.name}} {{ chap.description }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('catalog_index') }}">back to list</a>

    <a href="{{ path('catalog_edit', {'id': catalog.id}) }}">edit</a>

    {{ include('catalog/_delete_form.html.twig') }}
{% endblock %}
