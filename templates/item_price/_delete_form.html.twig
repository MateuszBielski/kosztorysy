<form method="post" action="{{ path('item_price_delete', {'id': item_price.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item_price.id) }}">
    <button class="btn">Delete</button>
</form>
