<form method="post" action="{{ path('cost_item_delete', {'id': cost_item.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cost_item.id) }}">
    <button class="btn">Delete</button>
</form>
